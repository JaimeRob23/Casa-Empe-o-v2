<Window x:Class="CasaEmpeño.View.SeleccionSucursalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasaEmpeño.View"
        mc:Ignorable="d"
         Title="SeleccionSucursalView" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <Border CornerRadius="12" BorderThickness="2" Opacity="0.95">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.2"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>

                <RowDefinition/>

            </Grid.RowDefinitions>


            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="SELECCIÓN DE SUCURSAL"
               Foreground="Black"
               FontSize="15"
               FontFamily="Montserrat"
               Grid.Column="0"
               VerticalAlignment="Center"
               Margin="10,0,0,0"/>

                <Button x:Name="btnMinimizar"
            Content="-"
            Foreground="White"
            FontSize="16"
            FontFamily="Montserrat"
            Cursor="Hand"
            Grid.Column="1"
            Click="btnMinimizar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="BlueViolet"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnCerrar"
            Content="X"
            Foreground="White"
            FontSize="16"
            FontFamily="Montserrat"
            Cursor="Hand"
            Grid.Column="2"
            Click="btnCerrar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid Grid.Row="1" Grid.Column="0" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>



                <TextBlock Text="Seleccione una sucursal"
                       Grid.Row="0"
                       FontFamily="Montserrat"
                       FontSize="24"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,20,0,10"/>

                <Border Grid.Row="1"
                    Width="250"
                    Height="180"
                    Background="LightGray"
                    CornerRadius="10"
                    HorizontalAlignment="Center"
                    Margin="0,20,0,20">
 
                    <TextBlock Text="Imagen"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"
                           FontFamily="Montserrat"
                           Foreground="DarkGray"
                           FontSize="16"/>
                </Border>

            
                <ComboBox x:Name="cmbSucursales"
                      Grid.Row="2"
                      Width="250"
                      Height="35"
                      HorizontalAlignment="Center"
                      FontFamily="Montserrat"
                      FontSize="14"
                      Margin="0,0,0,20"
                      Foreground="Black"
                      Background="White"
                      BorderBrush="Gray"
                      BorderThickness="0,0,0,2">
                    <ComboBoxItem Content="Sucursal Centro"/>
                    <ComboBoxItem Content="Sucursal Norte"/>
                    <ComboBoxItem Content="Sucursal Sur"/>
                </ComboBox>

         
                <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Regresar"
                        x:Name="btnRegresar"
                        Width="100"
                        Height="35"
                        FontFamily="Montserrat"
                        FontWeight="SemiBold"
                        Background="Black"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Margin="5"
                        Cursor="Hand"
                        Click="btnRegresar_Click"/>

                    <Button Content="Continuar"
                        x:Name="btnContinuar"
                        Width="100"
                        Height="35"
                        FontFamily="Montserrat"
                        FontWeight="SemiBold"
                        Background="Black"
                        Foreground="White"
                        BorderBrush="Transparent"
                        Margin="5"
                        Cursor="Hand"
                        Click="btnContinuar_Click"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</Window>