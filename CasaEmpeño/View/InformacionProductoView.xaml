<Window x:Class="CasaEmpeño.View.InformacionProductoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasaEmpeño.View"
        mc:Ignorable="d"
        Title="BuscarProducto" Height="450" Width="800" 
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="12" BorderThickness="2" Opacity="0.95">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.2"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>

                <RowDefinition/>

            </Grid.RowDefinitions>


            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="INGRESO DEL PRODUCTO"
                       Foreground="Black"
                       FontSize="15"
                       FontFamily="Montserrat"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

                <Button x:Name="btnMinimizar"
                    Content="-"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="1"
                    Click="btnMinimizar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="BlueViolet"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnCerrar"
                    Content="X"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="2"
                    Click="btnCerrar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <StackPanel Grid.Column="0" Grid.Row="1" HorizontalAlignment="Center">

                <!-- Icono de usuario -->

                <!-- Texto principal -->
                <TextBlock Text="Introduce la información del producto:" 
                       FontSize="20" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       Margin="0,0,0,20" />

                <!-- Input Nombre del producto -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Nombre del producto" Margin="0,0,0,5" />
                    <TextBox Height="40" BorderBrush="Black" BorderThickness="1" Padding="10" />
                </StackPanel>

                <!-- Input Descripción -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Descripción del producto" Margin="0,0,0,5" />
                    <TextBox Height="40" BorderBrush="Black" BorderThickness="1" Padding="10" />
                </StackPanel>

                <!-- Input Precio -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Precio" Margin="0,0,0,5" />
                    <TextBox Height="40" BorderBrush="Black" BorderThickness="1" Padding="10" />
                </StackPanel>

                <!-- Subir foto del producto -->
                <StackPanel Margin="0,0,0,20" HorizontalAlignment="Center">
                    <TextBlock Text="Foto del producto" Margin="0,0,0,5" TextAlignment="Center"/>
                    <Button Content="Subir foto" 
                        Width="150" Height="40" 
                        Background="LightGray" 
                        Click="SubirFoto_Click"/>
                    <Image Name="ProductoImagen" 
                       Width="150" Height="150" 
                       Margin="10"
                       Stretch="Uniform"
                       Visibility="Collapsed" />
                </StackPanel>

                <!-- Botón Siguiente -->
                <Button Content="Siguiente..." 
                    Background="#333" 
                    Foreground="White"
                    Height="40" 
                    Width="150"
                    HorizontalAlignment="Center"
                    Click="BuscarProducto_Click"/>

            </StackPanel>
        </Grid>
    </Border>
</Window>