<Window x:Class="CasaEmpeño.View.ProductosView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasaEmpeño.View"
        mc:Ignorable="d"
        Title="ProductosView" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="12" BorderThickness="2" Opacity="0.95">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.2"/>
            </LinearGradientBrush>
        </Border.Background>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>

            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="ARTÍCULOS"
                       Foreground="Black"
                       FontSize="15"
                       FontFamily="Montserrat"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
                <Button x:Name="btnMinimizar"
                    Content="-"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="1"
                    Click="btnMinimizar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="BlueViolet"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
                <Button x:Name="btnCerrar"
                    Content="X"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="2"
                    Click="btnCerrar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>
            <Grid Grid.Column="0" Grid.Row="1" Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

               
                <TextBlock Text="Artículos disponibles"
                       FontFamily="Montserrat"
                       FontSize="30"
                       FontWeight="SemiBold"
                       Foreground="Black"
                       HorizontalAlignment="Center"
                       Margin="0,10,0,20"/>

                
                <ComboBox x:Name="cmbCategorias"
                      Grid.Row="1"
                      Width="300"
                      Height="35"
                      HorizontalAlignment="Center"
                      FontFamily="Montserrat"
                      FontSize="14"
                      Margin="0,10,0,20"
                      Foreground="Black"
                     
                      Background="White"
                      BorderBrush="Gray"
                      BorderThickness="0,0,0,2"/>

                
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <WrapPanel HorizontalAlignment="Center" Margin="0,0,0,0">
                        
                        <StackPanel Width="150" Margin="10">
                            <Border Width="150" Height="150" Background="LightGray" CornerRadius="10"/>
                            <Button Content="Comprar"
                                FontFamily="Montserrat"
                                FontWeight="SemiBold"
                                Background="Black"
                                Foreground="White"
                                BorderBrush="Transparent"
                                Height="35"
                                Margin="0,10,0,0"
                                Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Black"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="BlueViolet"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        
                        <StackPanel Width="150" Margin="10">
                            <Border Width="150" Height="150" Background="LightGray" CornerRadius="10"/>
                            <Button Content="Comprar"
                                FontFamily="Montserrat"
                                FontWeight="SemiBold"
                                Background="Black"
                                Foreground="White"
                                BorderBrush="Transparent"
                                Height="35"
                                Margin="0,10,0,0"
                                Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Black"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="BlueViolet"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        
                        <StackPanel Width="150" Margin="10">
                            <Border Width="150" Height="150" Background="LightGray" CornerRadius="10"/>
                            <Button Content="Comprar"
                                FontFamily="Montserrat"
                                FontWeight="SemiBold"
                                Background="Black"
                                Foreground="White"
                                BorderBrush="Transparent"
                                Height="35"
                                Margin="0,10,0,0"
                                Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Background" Value="Black"/>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="BlueViolet"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </StackPanel>

                        
                    </WrapPanel>
                </ScrollViewer>
                <Button
                    x:Name="btnBuscarProducto"
                    Grid.Row="3"  
                    Content="Buscar producto"
                    FontFamily="Montserrat"
                    FontWeight="SemiBold"
                    Background="Black"
                    Foreground="White"
                    BorderBrush="Transparent"
                    Height="35"
                    Width="300"
                    Margin="0,10,0,0"
                    Cursor="Hand"
                    Click="btnBuscarProducto_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="BlueViolet"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Grid>
    </Border>
        
</Window>