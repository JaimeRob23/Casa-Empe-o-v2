<Window x:Class="CasaEmpeño.View.BuscarProducto"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasaEmpeño.View"
        mc:Ignorable="d"
        Title="BuscarProducto" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="12" BorderThickness="2" Opacity="0.95">
        <Border.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="White" Offset="0.2"/>
            </LinearGradientBrush>
        </Border.Background>

        <Grid>

            <Grid.Background>
                <ImageBrush ImageSource="/View/abstract-blur-centro-comercial.jpg"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>

                <RowDefinition/>

            </Grid.RowDefinitions>


            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="25"/>
                    <ColumnDefinition Width="5"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="BUSCAR PRODUCTO"
                       Foreground="Black"
                       FontSize="15"
                       FontFamily="Montserrat"
                       Grid.Column="0"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>

                <Button x:Name="btnMinimizar"
                    Content="-"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="1"
                    Click="btnMinimizar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="BlueViolet"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button x:Name="btnCerrar"
                    Content="X"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="2"
                    Click="btnCerrar_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Black"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="Red"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">


                <TextBlock Text="Encontrar un producto en específico..." 
                       FontSize="20" 
                       FontWeight="Bold" 
                       TextAlignment="Center" 
                       Margin="0,0,0,20" />

                <!-- Input ID del producto -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Nombre del producto"  />
                    <TextBox Height="40" BorderBrush="Black" BorderThickness="1" Padding="10" />
                </StackPanel>

                <!-- Input Rango de precio -->
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Rango de precio del producto" Margin="0,0,0,5" />
                    <TextBox Height="40" BorderBrush="Black" BorderThickness="1" Padding="10" />
                </StackPanel>

                <!-- Input Categoría del producto -->
                <StackPanel Margin="0,0,0,20">
                    <TextBlock Text="Categoría del producto" Margin="0,0,0,5" />
                    <TextBox Height="40" BorderBrush="Black" BorderThickness="1" Padding="10" />
                </StackPanel>

                <!-- Botón Buscar producto -->
                <Button Content="Buscar producto" 
                    Background="#333" 
                    Foreground="White"
                    Height="40" 
                    Width="150"
                    HorizontalAlignment="Center"
                    Click="BuscarProducto_Click"/>

            </StackPanel>
            <Image Source="/Images/lgoCasaEmpenoSinFondo.png" HorizontalAlignment="Left" Height="119" Margin="40,20,0,0" VerticalAlignment="Top" Width="89" Grid.Row="1"/>
        </Grid>

    </Border>
</Window>