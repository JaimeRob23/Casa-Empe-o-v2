<Window x:Class="CasaEmpeno.View.MensajeEmergente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Mensaje" Height="150" Width="350"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        WindowStyle="None"
        Background="#FFFAFAFA"
        AllowsTransparency="True">
    <Border Background="White" CornerRadius="10" Padding="10" BorderBrush="#FFCCCCCC" BorderThickness="1" >
        <StackPanel VerticalAlignment="Center">
            <TextBlock x:Name="MensajeTextBlock" 
                       Text="Este es un mensaje"
                       TextWrapping="Wrap"
                       FontSize="16"
                       Foreground="Black"
                       Margin="0 0 0 20"
                       HorizontalAlignment="Center"
                       TextAlignment="Center"/>
            <Button Content="Aceptar" Width="80" Height="30" HorizontalAlignment="Center"
                    Background="#FF007ACC" Foreground="White" 
                    Click="Aceptar_Click"/>
        </StackPanel>
    </Border>
</Window>

