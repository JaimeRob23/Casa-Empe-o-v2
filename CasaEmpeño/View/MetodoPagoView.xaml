<Window x:Class="CasaEmpeño.View.MetodoPagoView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CasaEmpeño.View"
        mc:Ignorable="d"
        Title="Método de Pago" Height="450" Width="800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="Transparent"
        AllowsTransparency="True">
    <Border CornerRadius="5">
        <Border CornerRadius="5" BorderThickness="2" Opacity="0.95">
            <Border.Background>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="White" Offset="0.2"/>
                </LinearGradientBrush>
            </Border.Background>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="25"/>
                        <ColumnDefinition Width="5"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="MWTODO DE PAGO"
                   Foreground="Black"
                   FontSize="15"
                   FontFamily="Montserrat"
                   Grid.Column="0"
                   VerticalAlignment="Center"
                   Margin="10,0,0,0"/>
                    <Button x:Name="btnMinimizar"
                    Content="-"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="1"
                    Click="btnMinimizar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Black"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="BlueViolet"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="btnCerrar"
                    Content="X"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Grid.Column="2"
                    Click="btnCerrar_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Background" Value="Black"/>
                                <Style.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter Property="Background" Value="Red"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Width="18" Height="18" CornerRadius="9" Background="{TemplateBinding Background}">
                                    <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <StackPanel  Grid.Column="0" Grid.Row="1" VerticalAlignment="Top" HorizontalAlignment="Center">

                    <!-- Icono de usuario -->

                    <!-- Título -->
                    <!-- Icono de usuario -->



                    <!-- Título -->
                    <TextBlock Text="Seleccione metodo de pago" 
                       FontSize="18" 
                       FontWeight="SemiBold" 
                       TextAlignment="Center" 
                       Margin="0,10"/>

                    <!-- Saldo en página web -->
                    <Border BorderBrush="Gray" BorderThickness="1" Padding="10" Margin="0,10">
                        <TextBlock Text="Saldo en pagina web = 100" 
                           FontSize="14" 
                           TextAlignment="Center"/>
                    </Border>

                    <!-- Botón Tarjeta de débito -->
                    <Button Content="Tarjeta de debito"
                    Width="200" Height="40"
                    Background="Black" Foreground="White"
                    FontWeight="Bold" Margin="0,10"/>

                    <!-- Botón Paypal -->
                    <Button Content="Paypal"
                    Width="200" Height="40"
                    Background="Black" Foreground="White"
                    FontWeight="Bold" Margin="0,10"/>

                    <!-- Botón Establecimiento -->
                    <Button Content="Establecimiento"
                    Width="200" Height="40"
                    Background="Black" Foreground="White"
                    FontWeight="Bold" Margin="0,10"/>

                    <!-- ComboBox para seleccionar establecimiento -->
                    <ComboBox Width="250" Height="40" Margin="0,20,0,0"
                      BorderBrush="Gray" BorderThickness="1"
                      FontSize="14"
                      SelectedIndex="0">
                        <ComboBoxItem Content="Seleccione el establecimiento..." IsEnabled="False"/>
                        <ComboBoxItem Content="Sucursal A" />
                        <ComboBoxItem Content="Sucursal B" />
                        <ComboBoxItem Content="Sucursal C" />
                    </ComboBox>

                </StackPanel>
            </Grid>
        </Border>
    </Border>
</Window>
